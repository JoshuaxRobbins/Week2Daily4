<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvCategory1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivPicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ivPicture"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="Name:" />

            <TextView
                android:id="@+id/tvAnimalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvName"
                android:paddingBottom="10dp"
                android:text="Animal Name" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_toRightOf="@+id/ivPicture"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="Age:" />

            <TextView
                android:id="@+id/tvAnimalAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_alignLeft="@+id/tvAnimalName"
                android:layout_toRightOf="@+id/tvName"
                android:paddingBottom="10dp"
                android:text="AnimalAge" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAge"
                android:layout_toRightOf="@+id/ivPicture"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="Weight:" />

            <TextView
                android:id="@+id/tvAnimalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAge"
                android:layout_alignLeft="@+id/tvAnimalName"
                android:layout_toRightOf="@+id/tvName"
                android:paddingBottom="10dp"
                android:text="AnimalWeight" />

            <TextView
                android:id="@+id/tvFacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeight"
                android:layout_toRightOf="@+id/ivPicture"
                android:paddingLeft="20dp"
                android:text="Fact:" />

            <TextView
                android:id="@+id/tvAnimalFact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeight"
                android:layout_alignLeft="@+id/tvAnimalName"
                android:layout_toRightOf="@+id/tvName"
                android:text="AnimalFact" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>